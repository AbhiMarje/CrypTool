<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileVerification.FileVerificationMethodChooserActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addFingerprintBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Digital Fingerprint"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkFingerprintBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify digital fingerprint"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFingerprintBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>